<Window x:Class="WPF_Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Columns="3" Rows="5">
        <Button Name="BtnCombo" Click="BtnCombo_Click">Combo Box</Button>
        <Button Name="BtnListBox" Click="BtnListBox_Click">List Box</Button>
        <Button Name="BtnListView" Click="BtnListView_Click">List View</Button>
        <Button Name="BtnDataGrid" Click="BtnDataGrid_Click">Data Grid</Button>
        <Button Name="BtnShowBindingView" Click="BtnShowBindingView_Click">Binding In WPF</Button>
    </UniformGrid>
</Window>
